{
  "name": "@catgirls/better-format",
  "version": "1.0.0",
  "description": "Make strings actually look good.",
  "author": "Dezziez",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./angular": {
      "types": "./dist/angular.d.ts",
      "import": "./dist/angular.mjs",
      "require": "./dist/angular.js"
    }
  },
  "peerDependencies": {
    "@angular/core": ">=19.0.0"
  },
  "peerDependenciesMeta": {
    "@angular/core": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "clean": "rm -rf dist node_modules",
    "publish-pkg": "pnpm build && pnpm publish --access public"
  },
  "devDependencies": {
    "@angular/core": "^20.0.0",
    "@vitest/coverage-v8": "3.2.4",
    "@vitest/ui": "3.2.4",
    "ts-node": "^10.9.2",
    "vitest": "3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dexxiez/catgirls.git",
    "directory": "packages/better-format"
  },
  "keywords": [
    "uwu",
    "catgirl",
    "format",
    "string formatter",
    "titles",
    "text",
    "capitalize"
  ]
}
